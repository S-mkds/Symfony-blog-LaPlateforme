{% extends 'base.html.twig' %}

{% block title %}Blog Symfony La Plateforme{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% if app.user %}
        <div class="mb-3">
            Vous êtes connecté : {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

<div class="example-wrapper">
    
    <h1>Bienvenue dans le blog </h1>
<div class="" >
    {% for article in articles %}
<div class="card m-2">
    <div class="card-body">
        <h5 class="card-title">{{article.titre}}</h5>
        <p class="card-text"> {{article.description}}</p>
        <p class="card-text">{{article.createdAt.format('y-m-d H:i:s')}}</p>
        <a href="#" class="card-link">Voir les commentaires</a>
    </div>
</div>
{% endfor %}
</div>
</div>
{% endblock %}
